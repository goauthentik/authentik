{
    "env": {
        "commonjs": true,
        "shared-node-browser": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-redeclare": "off",
      "semi": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ]
    }
}
