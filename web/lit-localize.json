{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en",
    "targetLocales": [
        "cs_CZ",
        "de_DE",
        "en",
        "es_ES",
        "fr_FR",
        "it_IT",
        "ja_JP",
        "ko_KR",
        "nl_NL",
        "pl_PL",
        "ru_RU",
        "tr_TR",
        "zh_Hans",
        "zh_Hant",
        "pseudo_LOCALE"
    ],
    "tsConfig": "./tsconfig.json",
    "output": {
        "mode": "runtime",
        "outputDir": "./src/locales",
        "localeCodesModule": "./src/locale-codes.ts"
    },
    "interchange": {
        "format": "xliff",
        "xliffDir": "./xliff/"
    }
}
