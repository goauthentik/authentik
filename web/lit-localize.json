{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en-US",
    "targetLocales": [
        "cs-CZ",
        "de-DE",
        "en-US",
        "es-ES",
        "fr-FR",
        "it-IT",
        "ja-JP",
        "ko-KR",
        "nl-NL",
        "pl-PL",
        "ru-RU",
        "tr-TR",
        "zh-Hans",
        "zh-Hant",
        "pseudo-LOCALE"
    ],
    "tsConfig": "./tsconfig.json",
    "output": {
        "mode": "runtime",
        "outputDir": "./src/locales",
        "localeCodesModule": "./src/locale-codes.ts"
    },
    "interchange": {
        "format": "xliff",
        "xliffDir": "./xliff/"
    }
}
