{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["es2017", "dom", "dom.iterable"],
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ]
    }
}
