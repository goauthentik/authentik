{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en",
    "targetLocales": [
        "en",
        "pseudo-LOCALE",
        "fr",
        "tr",
        "es",
        "pl",
        "zh_TW",
        "zh-Hans",
        "zh-Hant",
        "de"
    ],
    "inputFiles": ["../monolith/src/**/*.ts"],
    "output": {
        "mode": "runtime",
        "outputDir": "./src/locales",
        "localeCodesModule": "./src/locale-codes.ts"
    },
    "interchange": {
        "format": "xliff",
        "xliffDir": "./xliff/"
    }
}
