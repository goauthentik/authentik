{
    "name": "@goauthentik/prettier-config",
    "version": "3.2.0",
    "description": "authentik's Prettier config",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p .",
        "prettier": "prettier --write .",
        "prettier-check": "prettier --check ."
    },
    "type": "module",
    "exports": {
        "./package.json": "./package.json",
        ".": "./index.js",
        "./imports-plugin": "./lib/imports.js",
        "./formatter": "./lib/formatter.js"
    },
    "dependencies": {
        "format-imports": "^4.0.8"
    },
    "devDependencies": {
        "@goauthentik/tsconfig": "^1.0.4",
        "@types/node": "^24.10.1",
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19"
    },
    "engines": {
        "node": ">=22"
    },
    "types": "./out/index.d.ts",
    "files": [
        "./index.js",
        "lib/**/*",
        "out/**/*"
    ],
    "prettier": "./index.js",
    "overrides": {
        "format-imports": {
            "eslint": "^9.30.1"
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
